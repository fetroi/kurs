#include <iostream>
#include "hotel_management.h" // Підключення модуля керування готелем

int main() {
    // Тест функції додавання клієнта
    додати_клієнта("Іван", "Петров", 101);

    // Тест функції перегляду зайнятих номерів
    перегляд_зайнятих_номерів();

    // Тест функції заселення клієнта
    заселити_клієнта("Марія", "Іванова", 102);

    // Тест функції виселення клієнта
    виселити_клієнта(101);

    return 0;
}
